modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glib", "nss", "nspr", "at-spi2-atk", "cups", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXrandr", "libdrm", "mesa", "expat", "xorg.libxcb", "alsa-lib", "pango", "cairo", "xorg.libX11", "xorg.libXext", "xorg.libXfixes", "dbus"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Remotion Studio"

[[workflows.workflow]]
name = "Remotion Studio"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd videolayeros && npx remotion studio src/index.ts --port 5000 --ipAddress 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3002

[[ports]]
localPort = 5000
externalPort = 5000

[deployment]
deploymentTarget = "vm"
run = ["npx", "remotion", "studio", "videolayeros/src/index.ts", "--port", "3000", "--ipAddress", "0.0.0.0"]
